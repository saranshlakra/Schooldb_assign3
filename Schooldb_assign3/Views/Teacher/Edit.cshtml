@model Schooldb_assign3.Models.teachers
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Teacher</h2>



<h2>Update Teacher Details</h2>

<form method="post" action="/Teacher/Update/@Model.teacherid ">
    <div>
        <label>First Name:</label>
        <input type="text" name="teachersFName" value="@Model.teacherfname" id="fname" />
    </div>
    <div>
        <label>Last Name</label>
        <input type="text" name="teachersLName" value="@Model.teacherlname" id="lname" />
    </div>
    <div>
        <label>Salary</label>
        <input type="number" name="salary" value="@Model.salary" id="salary" />
    </div>
    <div>
        <input type="submit" value="Update" onclick="checkDetails();" id="button" />
    </div>
</form>

<script language="javascript" type="text/javascript">

    var tFName, tLName, tSalary;
    function checkDetails() {
        tFName = document.getElementById("fname");
        tLName = document.getElementById("lname");
        tSalary = document.getElementById("salary");
        //console.log(tFName); // check
        if (tFName.value === '' || tLName === '') { // it will check for teachers first, last name and salary

            alert("Please enter valid details");
            event.preventDefault() // it stop code for further execution

        }

    }
